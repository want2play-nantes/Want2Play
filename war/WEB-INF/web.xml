<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<display-name>
		Want2Play
	</display-name>
	
	<description>
		RÃ©seau social de rencontre sportive.
	</description>

	<context-param>
    	<description>Titre de l'application</description>
    	<param-name>applicationTitle</param-name>
    	<param-value>I Want 2 Play !</param-value>
    </context-param>

	<listener>
        <description>ServletContextListener</description>
        <listener-class>com.want2play.servlets.ContextListener</listener-class>
    </listener>
    
    <filter>
    	<description>Permet d'obtenir des informations sur le status de l'utilisateur.</description>
        <filter-name>InfoHeaderUser</filter-name>
        <filter-class>com.want2play.filters.InfoHeaderUser</filter-class>
	</filter>
	<filter-mapping>
        	<filter-name>InfoHeaderUser</filter-name>
        	<url-pattern>/*</url-pattern>
	</filter-mapping>
    
    <!-- Servlets -->

	<servlet>
		<servlet-name>IndexServlet</servlet-name>
		<servlet-class>com.want2play.servlets.IndexServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.want2play.servlets.LoginServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.want2play.servlets.LogoutServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>TestServlet</servlet-name>
		<servlet-class>com.want2play.servlets.TestServlet</servlet-class>
	</servlet>
	
	<!-- Mapping -->
	
	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>TestServlet</servlet-name>
		<url-pattern>/Test</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>
</web-app>